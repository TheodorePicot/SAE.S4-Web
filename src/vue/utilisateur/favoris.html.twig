{% extends "base.html.twig" %}

{% block page_title %}Favoris{% endblock %}

{% block page_content %}


    <main>

        <div class="d-flex justify-content-center my-4">
            <h1> Vos trajets favoris</h1>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-md-12 col-sm-12 offset-lg-3 my-5">
                {% for trajet in trajets %}
                    <div class="card mx-5 h-40 my-3">
                        <div class="card-body">
                            <h5 class="card-title" style="color: black"><p class="card-text" style="color: black">{{ trajet.comm_depart }}
                                    - {{ trajet.comm_arrivee }} | {{ trajet.date|date("H:i -  d m Y") }}
                            </h5>
                            <a href="{{ route("afficherTrajet", {'idTrajet' : trajet.idTrajet}) }}"
                               class="btn btn-primary">Voir le trajet</a>
                            <a href="{{ route("supprimerFavoris", {'idTrajet' : trajet.idTrajet}) }}" class="delete-trajet btn btn-primary">Supprimer des favoris</a>
{#                            <button class="delete-trajet btn btn-primary" data-id-trajet="{{ trajet.idTrajet }}">#}
{#                                Supprimer des favoris#}
{#                            </button>#}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>


    </main>

{% endblock %}