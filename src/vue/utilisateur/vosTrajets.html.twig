{% extends "base.html.twig" %}

{% block page_title %}Historique{% endblock %}

{% block page_content %}
{#    <script type="text/javascript" src="{{ assets("assets/js/historique.js") }}" defer></script>#}

    <main>

        <div class="d-flex justify-content-center my-4">
            <h1> Vos derniers trajets</h1>

        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3 my-5">
                {% for trajet in trajets %}
                    <div class="card mx-5 h-40 my-3">
                        <div class="card-body">
                            <h5 class="card-title" style="color: black"> {{ trajet.comm_depart }}
                                - {{ trajet.comm_arrivee }} | {{ trajet.date|date("H:i -  d m Y") }}</h5>

                            <a href="{{ route("afficherTrajet", {'idTrajet' : trajet.idTrajet}) }}"
                               class="btn btn-primary">Voir le trajet</a>
                            {% if trajet.estFavoris %}
                                <img alt="user" class="heart" src="{{ assets("assets/img/heart.png") }}">
                            {% endif %}
                            {% if not trajet.estFavoris %}
                                <a href="{{ route("ajouterFavoris",  {'idTrajet' : trajet.idTrajet}) }}"
                                   class="btn btn-primary">Enregistrer</a>
                            {% endif %}


                        </div>
                    </div>
                {% endfor %}
            </div>


        </div>
    </main>

{% endblock %}
